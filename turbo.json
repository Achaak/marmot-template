{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "pre-lint": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^pre-lint"]
    },
    "start": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "database#build": {
      "dependsOn": ["^build", "$NODE_ENV"],
      "outputs": ["dist/**"]
    },
    "db:migrate:deploy": {
      "outputs": []
    },
    "db:push": {
      "outputs": []
    },
    "db:seed": {
      "outputs": []
    },
    "generate": {
      "dependsOn": ["^generate"]
    }
  }
}
